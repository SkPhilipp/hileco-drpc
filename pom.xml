                <artifactId>resteasy-jaxrs</artifactId>
                <version>3.0.4.Final</version>
            </dependency>
            <!-- testing -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.11</version>
            </dependency>
